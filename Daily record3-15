Judge a prime

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>

int is_prime(int n)
{
	int i = 0;
	for (i = 2; i <= n-1; i++)
	{
		if (n % i == 0)
		{
			return 0;
		}
		return 1;
	}

}

int main()
{
	int left=0;
	int right=0;
	int* p1 = &left;
	int* p2 = &right;
	int i = 0;
	printf("请选择范围：");
	scanf("%d%d", &left, &right);
	
	if(*p1<=*p2)
		for (i = left; i <= right; i++)
		{
			if (is_prime(i) == 1)
				printf("%d\n", i);
		}
	else  
		printf("输入错误");
	return 0;
}


2.Judge a leap year

#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>

int is_leap_year(int year)
{
	if (year % 4 == 0)
		return 1;
	else
		return 0;
}
int main()
{
	int year = 0;
	scanf("请选择年份%d", &year);
	if (is_leap_year(year) == 1)
		printf("%d是闰年", year);
	else
		printf("%d不是闰年", year);
}


3.factorial multiplication
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>

int Fac1(int i)
{
	int ret = 0;
	if (i > 0)
	{
		ret = i * Fac1(i-1);
		return ret;
	}
	else
		return 1;
}

int main()
{
	int n ;
	int sum = 0;
	printf("请输入数字:");
	scanf("%d", &n);
	sum = Fac1(n);
	printf("输出结果为：%d\n", sum);
	return 0;
}
