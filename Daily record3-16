#include"game.h"

void gameboard()
{
	char board[row][col] = { 0 };

}

//玩家行动
void player(char board[row][col], int row, int col)
{
	int x = 0;
	int y = 0;
	printf("玩家回合");
	printf("请输入坐标以下棋:>");
	scanf("%d%d", &x, &y);
	while (1)
	{
		printf("请输入坐标以下棋:>");
		scanf("%d%d", &x, &y);
		if (x <= row && x >= 1 && y >= 1 && y <= col)//判断正确坐标
		{
			if (board[x][y] == ' ')
			{
				board[x][y] = '+';//占用坐标
			}
			else
				printf("该坐标已被占用，请重新选择");

		}
		else
			printf("错误坐标，请重新输入");
	}
}
